<%- include('../partials/header') %>
<h2 class="mb-3">Suppliers</h2>
<a href="/suppliers/new" class="btn btn-primary mb-3">âž• Add Supplier</a>
<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr><th>Name</th><th>Address</th><th>Phone</th><th>Actions</th></tr>
  </thead>
  <tbody>
  <% suppliers.forEach(s => { %>
    <tr>
      <td><%= s.name %></td>
      <td><%= s.address %></td>
      <td><%= s.phone %></td>
      <td>
        <a href="/suppliers/<%= s._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
        <form action="/suppliers/<%= s._id %>/delete" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
      </td>
    </tr>
  <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>
