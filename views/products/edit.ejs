<h2>Edit Product</h2>
<form method="POST" action="/products/update/<%= product._id %>">
  Name: <input type="text" name="name" value="<%= product.name %>"><br>
  Address: <input type="text" name="address" value="<%= product.address %>"><br>
  Phone: <input type="text" name="phone" value="<%= product.phone %>"><br>
  Supplier:
  <select name="supplierId">
    <% suppliers.forEach(s => { %>
      <option value="<%= s._id %>" <%= product.supplierId == s._id ? 'selected' : '' %>><%= s.name %></option>
    <% }) %>
  </select><br>
  <button type="submit">Update</button>
</form>
