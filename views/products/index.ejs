<%- include('../partials/header') %>
<h2 class="mb-3">Products</h2>
<a href="/products/new" class="btn btn-primary mb-3">âž• Add Product</a>
<table class="table table-hover table-bordered">
  <thead class="table-dark">
    <tr><th>Name</th><th>Price</th><th>Quantity</th><th>Supplier</th><th>Actions</th></tr>
  </thead>
  <tbody>
  <% products.forEach(p => { %>
    <tr>
      <td><%= p.name %></td>
      <td>$<%= p.price %></td>
      <td><%= p.quantity %></td>
      <td><%= p.supplierId ? p.supplierId.name : 'N/A' %></td>
      <td>
        <a href="/products/<%= p._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
        <form action="/products/<%= p._id %>/delete" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
      </td>
    </tr>
  <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>
